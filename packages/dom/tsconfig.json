{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "allowJs": false,
    "strict": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "outDir": "lib",
    "jsx": "preserve",
    "lib": ["DOM", "ES2016"],
    "declaration": true,
    "baseUrl": "./",
    "paths": {
      "@utils/*": ["../../utils/*"]
    }
  }
}
