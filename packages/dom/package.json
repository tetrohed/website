{
  "name": "@arminjazi/dom",
  "version": "1.0.0",
  "description": "dom traversal and manipulation library with jsx semantics",
  "main": "./lib/dom.js",
  "types": "./lib/index.d.ts",
  "license": "MIT",
  "scripts": {
    "build": "yarn run build:types && yarn run build:js",
    "build:types": "tsc --emitDeclarationOnly --project tsconfig.build.json && cp ./src/*.d.ts ./lib/",
    "build:js": "babel src --out-dir lib --extensions \".ts,.tsx\" --source-maps inline",
    "build:test:js": "babel tests --out-dir testlib --extensions \".ts,.tsx\" --source-maps inline",
    "lint": "eslint --ext .ts ./src/**/*"
  },
  "files": [
    "lib/*"
  ],
  "dependencies": {
    "@arminjazi/babel-plugin-import-jsx-pragma": "file:../babel-plugin-import-jsx-pragma"
  },
  "devDependencies": {
    "@babel/plugin-transform-react-jsx": "^7.9.4",
    "jest": "^26.0.1",
    "@testing-library/dom": "^7.5.1",
    "@testing-library/jest-dom": "^5.7.0"
  }
}
